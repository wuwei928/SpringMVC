<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hollysys.dao.UserMapper">
    <resultMap id="UserResultMapper" type="com.hollysys.entity.User">
        <result column="username" property="username" javaType="string" jdbcType="VARCHAR"/>
        <result column="password" property="password" javaType="string" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="getUsers" resultMap="UserResultMapper">
         select  username, password from users
    </select>
    <select id="getUser" resultMap="UserResultMapper" parameterType="java.lang.Integer">
        select  username, password from users where id=#{id}
    </select>
    <insert id="insert" parameterType="com.hollysys.entity.User">
         insert into users (ID, username, password)
         values (#{username,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR})
    </insert>
    <update id="update" parameterType="com.hollysys.entity.User">
        update users set username = #{username,jdbcType=VARCHAR},
                           password = #{password,jdbcType=VARCHAR}
        where ID = #{id,jdbcType=INT}
    </update>
    <delete id="delete" parameterType="java.lang.Integer">
       delete from users where ID = #{id,jdbcType=INT}
    </delete>
</mapper>